- provide(:title, @design.name)
.row
  .col-xs-12.col-md-9
    %h1= @design.name
  .col-xs-4.col-md-3
    .pull-right
      = link_to image_tag('hold.gif'), '#', target: '_blank', id: 'facebook', title: 'Facebook'
      = link_to image_tag('hold.gif'), '#', target: '_blank', id: 'twitter', title: 'Twitter'
      = link_to image_tag('hold.gif'), '#', target: '_blank', id: 'reddit', title: 'Reddit'
%p
  %small
    published on
    = @design.published_at.to_formatted_s :long_ordinal
.row
  .col-xs-12.col-md-10
    .well
      = raw @design.description
  .col-xs-6.col-md-2
    %h4 Categories
    %ul.categories= render @categories

:javascript
  $('li.designs').addClass('active');