= render 'layouts/error_messages', object: f.object

.form-group
  = f.label :name, class: 'control-label'
  = f.text_field :name, class: 'form-control'
.form-group
  = f.label :published_at, 'Published in'
  = f.date_select :published_at, class: 'form-control', discard_day: true, order: [:month, :year]
.form-group
  = f.label :content, class: 'control-label'
  = f.cktext_area :content, ckeditor: {}, class: 'form-control'
.form-group
  = f.label :url
  = f.text_field :url, class: 'form-control'
.form-group
  = f.label :category_tokens, 'Tags'
  = f.text_field :category_tokens, data: {load: @design.categories}, class: 'form-control'